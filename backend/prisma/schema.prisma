// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  DECLINED
  CANCELLED
}

enum ParticipantStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXITED
}

enum InstallmentStatus {
  PENDING
  PAID
}

model User {
  id        String   @id @default(uuid())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  avatar    Bytes?
  avatarMimeType String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  savedColors String[] @default([])

  // Relations
  sentFriendRequests     Friendship[] @relation("FriendshipRequester")
  receivedFriendRequests Friendship[] @relation("FriendshipAddressee")
  
  createdTransactions    Transaction[] @relation("TransactionCreator")
  participatingIn        TransactionParticipant[]
  
  categories             Category[] // Custom categories created by user
  notifications          Notification[]
  
  sentMergeRequests     MergeRequest[] @relation("MergeRequester")
  receivedMergeRequests MergeRequest[] @relation("MergeTarget")

  sentRequestLogs     FriendRequestLog[] @relation("RequestLogRequester")
  receivedRequestLogs FriendRequestLog[] @relation("RequestLogAddressee")
  
  externalFriends     ExternalFriend[]
  personalCategoryOverrides PersonalCategoryOverride[]
  categorySettings    UserCategorySetting[]
  
  // Strategic Modules (Phase 1 & 2)
  budgets             Budget[]
  savingsGoals        SavingsGoal[]
  nudgeLogs           NudgeLog[]
  security            UserSecurity?
  bankConnections     BankConnection[]
  badges              UserBadge[]
  streakCurrent       Int      @default(0)
  streakLongest       Int      @default(0)
  lastStreakUpdate    DateTime?
}

model Badge {
  id          String   @id @default(uuid())
  code        String   @unique // e.g. "SAVER_L1", "BUDGET_MASTER"
  name        String
  description String
  icon        String   // Material icon name or URL
  criteria    Json?    // Logic definition for auto-awarding
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userBadges  UserBadge[]
}

model UserBadge {
  id        String   @id @default(uuid())
  userId    String
  badgeId   String
  awardedAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
}

model BankConnection {
  id             String   @id @default(uuid())
  userId         String
  provider       String   // "MOCK", "PLUGGY", "BELVO"
  itemId         String?  // External ID (e.g., Pluggy Item ID)
  accessToken    String?  // Encrypted (conceptually)
  refreshToken   String?
  status         String   @default("ACTIVE") // ACTIVE, ERROR, DISCONNECTED
  lastSyncedAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, provider, itemId])
}

model UserSecurity {
  id        String   @id @default(uuid())
  userId    String   @unique
  mfaSecret String?
  mfaEnabled Boolean @default(false)
  backupCodes String[]
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ExternalFriend {
  id        String   @id @default(uuid())
  userId    String
  name      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FriendRequestLog {
  id          String   @id @default(uuid())
  requesterId String
  addresseeId String
  createdAt   DateTime @default(now())

  requester   User @relation("RequestLogRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  addressee   User @relation("RequestLogAddressee", fields: [addresseeId], references: [id], onDelete: Cascade)
}

model MergeRequest {
  id              String   @id @default(uuid())
  requesterId     String
  targetUserId    String
  placeholderName String
  status          String   @default("PENDING") // PENDING, ACCEPTED, REJECTED
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  requester       User     @relation("MergeRequester", fields: [requesterId], references: [id])
  targetUser      User     @relation("MergeTarget", fields: [targetUserId], references: [id])
}

model Friendship {
  id          String           @id @default(uuid())
  requesterId String
  addresseeId String
  status      FriendshipStatus @default(PENDING)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  requester   User @relation("FriendshipRequester", fields: [requesterId], references: [id])
  addressee   User @relation("FriendshipAddressee", fields: [addresseeId], references: [id])

  @@unique([requesterId, addresseeId])
}

model Category {
  id        String   @id @default(uuid())
  isSystem  Boolean  @default(false) // If true, available to everyone
  userId    String?  // If null and isSystem=false, it's an error. If null and isSystem=true, it's global.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User?         @relation(fields: [userId], references: [id])
  transactions Transaction[]
  keywords     CategoryKeyword[]
  translations CategoryTranslation[]
  globalStats  GlobalCategoryStats[]
  personalOverrides PersonalCategoryOverride[]
  userSettings UserCategorySetting[]
  budgets      Budget[]
}

model CategoryTranslation {
  id         String   @id @default(uuid())
  categoryId String
  language   String   // e.g. 'pt-BR', 'en'
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([name])
  @@index([language])
}

model UserCategorySetting {
  id         String   @id @default(uuid())
  userId     String
  categoryId String
  color      String?  // Hex code
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId])
}

model Transaction {
  id          String          @id @default(uuid())
  type        TransactionType
  amount      Decimal         @db.Decimal(10, 2)
  currency    String          @default("BRL")
  description String?
  date        DateTime
  isShared    Boolean         @default(false)
  isFixed     Boolean         @default(false)
  recurrenceEndsAt DateTime?
  excludedDates DateTime[]  @default([])
  createdAt   DateTime        @default(now())
  paymentMethod String?
  updatedAt   DateTime        @updatedAt

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  creatorId   String
  creator     User     @relation("TransactionCreator", fields: [creatorId], references: [id])

  installments Installment[]
  participants TransactionParticipant[]
}

model Installment {
  id            String            @id @default(uuid())
  transactionId String
  number        Int
  amount        Decimal           @db.Decimal(10, 2)
  dueDate       DateTime
  status        InstallmentStatus @default(PENDING)
  
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
}

model TransactionParticipant {
  id            String            @id @default(uuid())
  transactionId String
  userId        String?           // Nullable for placeholder friends (future feature)
  placeholderName String?         // For non-registered friends
  shareAmount   Decimal?          @db.Decimal(10, 2)
  sharePercent  Decimal?          @db.Decimal(5, 2)
  baseShareAmount Decimal?        @db.Decimal(10, 2) // Original/Proposed Amount
  baseSharePercent Decimal?       @db.Decimal(5, 2)  // Original/Proposed Percent
  status        ParticipantStatus @default(PENDING)
  
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  user          User?         @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  title     String
  message   String
  data      Json?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CategoryKeyword {
  id         String   @id @default(uuid())
  categoryId String
  keyword    String
  weight     Int      @default(1)
  createdAt  DateTime @default(now())

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model PersonalCategoryOverride {
  id          String   @id @default(uuid())
  userId      String
  textPattern String
  categoryId  String
  weight      Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model GlobalCategoryStats {
  id         String   @id @default(uuid())
  keyword    String   @unique
  categoryId String
  usageCount Int      @default(1)
  updatedAt  DateTime @updatedAt

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model Budget {
  id          String   @id @default(uuid())
  userId      String
  categoryId  String
  amount      Decimal  @db.Decimal(10, 2)
  period      String   @default("MONTHLY") // MONTHLY, WEEKLY, YEARLY
  startDate   DateTime @default(now())
  endDate     DateTime?
  softLimit   Decimal? @db.Decimal(10, 2) // Alert threshold, e.g. 80%
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  @@unique([userId, categoryId, period])
}

model SavingsGoal {
  id            String   @id @default(uuid())
  userId        String
  name          String
  targetAmount  Decimal  @db.Decimal(10, 2)
  currentAmount Decimal  @default(0) @db.Decimal(10, 2)
  deadline      DateTime?
  status        String   @default("IN_PROGRESS") // IN_PROGRESS, COMPLETED, PAUSED
  icon          String?
  color         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model NudgeLog {
  id        String   @id @default(uuid())
  userId    String
  type      String   // e.g., "OVERSPENDING", "SAVE_MORE"
  message   String
  metadata  Json?    // Context data
  seenAt    DateTime?
  actedAt   DateTime?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
